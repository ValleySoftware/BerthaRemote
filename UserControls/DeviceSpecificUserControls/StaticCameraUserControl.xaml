<UserControl
    x:Class="BerthaRemote.UserControls.StaticCameraUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BerthaRemote.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:mui="using:Microsoft.UI.Xaml.Controls"
    xmlns:wui="using:Windows.UI.Xaml.Controls"
    Background="Transparent">
    
    <Grid
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="Transparent"
        BorderThickness="0,0,2,0">
        <Grid.BorderBrush>
            <RevealBorderBrush FallbackColor="White" Color="White" />
        </Grid.BorderBrush>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <wui:TextBlock
            Grid.Row="0"
            Margin="4,8"
            HorizontalAlignment="Stretch"
            HorizontalTextAlignment="Center"
            Style="{ThemeResource SubtitleTextBlockStyle}"
            Text="Static Camera." />

        <Grid
            Grid.Row="1"
            Margin="8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderThickness="0,2,0,0">
            <Grid.BorderBrush>
                <RevealBorderBrush FallbackColor="Red" Color="Red" />
            </Grid.BorderBrush>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <TextBlock Text="{x:Bind device.Distance, Mode=OneWay}" x:Name="distanceTextBox"/>
            
            <wui:Button
                x:Name="connectCamera"
                Grid.Row="1"
                Margin="8,24,8,8"
                Padding="4"
                HorizontalAlignment="Stretch"
                Content="Connect"
                Click="connectCamera_Click"
                Style="{ThemeResource ButtonRevealStyle}" />
            <wui:TextBox
                x:Name="cameraIP"
                Grid.Row="2"
                Margin="8"
                HorizontalAlignment="Stretch"
                Text="{x:Bind device.CameraIP, Mode=TwoWay}" />
            <WebView
                x:Name="CameraWebView"
                Grid.Row="3"
                Margin="8"
                Width="320"
                Height="240"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center" />

        </Grid>
    </Grid>
</UserControl>
