<UserControl
    x:Class="BerthaRemote.UserControls.DevicesGlobalUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BerthaRemote.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mui="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewmodels="using:BerthaRemote.ViewModels"
    xmlns:wui="using:Windows.UI.Xaml.Controls"
    Background="Transparent"
    mc:Ignorable="d">

    <UserControl.Resources>
        <wui:DataTemplateSelector x:Key="DeviceTemplateSelector" />

        <DataTemplate x:Key="ManipulatorArmDataTemplate" x:DataType="viewmodels:IDevice" />
        <DataTemplate x:Key="PanTiltBaseDataTemplate" x:DataType="viewmodels:IDevice" />
        <DataTemplate x:Key="PanTiltCameraDataTemplate" x:DataType="viewmodels:IDevice">
            <local:PanTiltCameraUserControl />
        </DataTemplate>
        <DataTemplate x:Key="PanTiltDistanceDataTemplate" x:DataType="viewmodels:IDevice" />
        <DataTemplate x:Key="StaticMountCameraDataTemplate" x:DataType="viewmodels:IDevice" />
        <DataTemplate x:Key="TemperatureSensorDataTemplate" x:DataType="viewmodels:IDevice" />
    </UserControl.Resources>

    <Grid
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="Transparent"
        BorderThickness="0,0,2,0">
        <Grid.BorderBrush>
            <RevealBorderBrush FallbackColor="Red" Color="Red" />
        </Grid.BorderBrush>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <wui:TextBlock
            Grid.Row="0"
            Margin="4,8"
            HorizontalAlignment="Stretch"
            HorizontalTextAlignment="Center"
            Style="{ThemeResource SubtitleTextBlockStyle}"
            Text="Doohickeys" />

        <wui:ListView
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            ItemTemplateSelector="{StaticResource DeviceTemplateSelector}" />
    </Grid>
</UserControl>
