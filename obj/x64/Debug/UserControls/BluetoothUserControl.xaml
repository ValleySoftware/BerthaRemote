<UserControl x:ConnectionId='1'
    x:Class="BurthaRemote.UserControls.BluetoothUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:connectivity="using:Microsoft.Toolkit.Uwp.Connectivity"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BurthaRemote.UserControls"
    xmlns:lottie="using:Microsoft.Toolkit.Uwp.UI.Lottie"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mui="using:Microsoft.UI.Xaml.Controls"
    xmlns:wui="using:Windows.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="Transparent"
        BorderThickness="0,0,2,0">
        <Grid.BorderBrush>
            <RevealBorderBrush FallbackColor="Red" Color="Red" />
        </Grid.BorderBrush>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <wui:TextBlock
            Grid.Row="0"
            Margin="4,8"
            HorizontalAlignment="Stretch"
            HorizontalTextAlignment="Center"
            Style="{ThemeResource SubtitleTextBlockStyle}"
            Text="Connection (BLE)" />

        <Grid
            Grid.Row="1"
            Margin="8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderThickness="0,2,0,0">
            <Grid.BorderBrush>
                <RevealBorderBrush FallbackColor="Red" Color="Red" />
            </Grid.BorderBrush>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <wui:Button x:ConnectionId='5'
                x:Name="scanForBluetoothButton"
                Margin="0,8"
                Padding="8"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                                                    
                Content="Scan"
                Style="{ThemeResource ButtonRevealStyle}" />

            <wui:ListView x:ConnectionId='6'
                Grid.Row="1"
                Margin="0,8"
                Padding="8"
                Header="Bluetooth Devices"
                                                                                                      
                                                                                >
                <wui:ListView.ItemTemplate>
                    <DataTemplate                                                      >
                        <Grid x:ConnectionId='20'>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <wui:Button x:ConnectionId='21'
                                x:Name="connectToDeviceButton"
                                Width="32"
                                Height="32"
                                Margin="4"
                                                                   
                                Content=""
                                FontFamily="Segoe MDL2 Assets"
                                Style="{ThemeResource ButtonRevealStyle}" />
                            <wui:TextBlock x:ConnectionId='22'
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                                                  />
                        </Grid>
                    </DataTemplate>
                </wui:ListView.ItemTemplate>
            </wui:ListView>

            <wui:ListView x:ConnectionId='7'
                x:Name="servicesList"
                Grid.Row="2"
                Margin="0,8"
                Padding="8"
                x:Load="False"                                                                                                       
                Header="Available Services"
                                                                                        
                                                                                 >
                <wui:ListView.ItemTemplate>
                    <DataTemplate                                                      >
                        <Grid x:ConnectionId='15'>
                            <wui:TextBlock x:ConnectionId='16'                                                    >
                                <Run x:ConnectionId='17'                                   />
                                <Run Text=" - " />
                                <Run x:ConnectionId='18'                                   />
                            </wui:TextBlock>
                        </Grid>
                    </DataTemplate>
                </wui:ListView.ItemTemplate>
            </wui:ListView>

            <wui:ListView x:ConnectionId='8'
                x:Name="characteristicsList"
                Grid.Row="3"
                Margin="0,8"
                Padding="8"
                Header="Available Characteristics"
                                                                                                
                                                                                        >
                <wui:ListView.ItemTemplate>
                    <DataTemplate                                                        >
                        <Grid x:ConnectionId='10'>
                            <wui:TextBlock x:ConnectionId='11'                                                    >
                                <Run x:ConnectionId='12'                                   />
                                <Run Text=" - " />
                                <Run x:ConnectionId='13'                                   />
                            </wui:TextBlock>
                        </Grid>
                    </DataTemplate>
                </wui:ListView.ItemTemplate>
            </wui:ListView>
        </Grid>

        <Grid Grid.Row="2" Grid.ColumnSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <wui:Button x:ConnectionId='3'
                Grid.Column="0"
                                    
                Content="SendSomething"
                Style="{ThemeResource ButtonRevealStyle}" />
            <wui:TextBox x:ConnectionId='4'
                x:Name="messageTextBox"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                Text="00-90-90-2" />
        </Grid>

        <mui:AnimatedVisualPlayer x:ConnectionId='2'
            x:Name="mainThinkingLottieLoadingAnimation"
            Grid.Row="1"
            Width="48"
            Height="48"
            Margin="8"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            x:Load="False"                                       
            AutoPlay="True"
            PlaybackRate="0.5">
            <lottie:LottieVisualSource Options="Optimize" UriSource="ms-appx:///DeployedAssets/ArrowsChasing.json" />
        </mui:AnimatedVisualPlayer>
    </Grid>
</UserControl>

